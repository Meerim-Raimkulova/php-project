{% extends 'index.html.twig' %}
{% block PageCont %}
<div>
	<br><br><br>
		<h2 align = "center">Tablitsadagy  maalymattar</h2>
						<table border = "1" align="center">
								<tr>
									<th>id</th>
									<th>name</th>
									<th>kod</th>
									<th>oblast</th>
									<th>kalky</th>
									<th>---</th>
									<th>---</th>
								</tr>
							{% for city in cities%}
